extends ./base.jade

block scripts
	if env == 'development'
		link(rel='stylesheet', href='/css/app.css')
	else
		link(rel='stylesheet', href='/css/app.css')

block content
	#app.container

	script(type='text/javascript').
		// jenk global variable bootstrapping
		window.bootstrap = {};
		window.bootstrap.user = !{JSON.stringify(user || {})};


	if env == 'development'
		script(src='http://localhost:8888/build/app.bundle.js')
	else
		script(src='js/build/app.bundle.js')

